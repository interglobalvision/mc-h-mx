// styl property ordering: https://github.com/rossPatton/stylint/blob/master/src/data/ordering.json

@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)

// ******************************************************

// BASIC

html
  background-color: $color-white
  color: $color-black

img
  max-width: 100%
  height: auto

.gallery-image-holder
  margin-bottom: 1rem

$header-height = 79px

#header
  position: fixed
  z-index: 100
  width: 100%
  height: $header-height

button
  padding: 0
  border: 0
  background: transparent
  appearance: none
  &:focus
    outline: none

// ******************************************************

// HOME

body.home
  #page-close
    display: none
  h1
    text-shadow: 0 0 10px $color-white

home-project-item
  opacity: 0

.cam-feed
  position: fixed
  top: 0
  left: 0
  z-index: -100
  width: 100%
  height: 100%
  background-image: url('http://estudioherrera.servehttp.com/')
  background-position: center
  background-size: cover
  pointer-events: none
  filter: contrast(105%) saturate(105%)
  transition: transform 100ms ease-out

// ******************************************************

// PROJECT SINGLE

.project-pagination
  a
    display: flex
    flex-direction: row
    align-items: center
  &:first-of-type
    a
      justify-content: flex-start
  &:last-of-type
    a
      justify-content: flex-end

// ******************************************************

// CAMERA CONTROL

#cam-control
  position: fixed
  bottom: 0
  left: 10%
  z-index: 90
  width: 80%
  pointer-events: none

.cam-control-item
  margin-top: 60px

.cam-ui
  pointer-events: auto

.cam-fader-holder
  display: flex
  &:after
    content: ""
    position: absolute
    border: solid $color-black
    top: -13px
    left: -18px
    width: 30px
    height: 30px
    border-width: 0 4px 0 0
  &:before
    content: ""
    position: absolute
    border: solid $color-black
    top: -13px
    right: -18px
    width: 30px
    height: 30px
    border-width: 0 0 0 4px
  &.hide-fader
    .cam-fader
      display: none
      visibility: hidden
      pointer-events: none
    &:after, &:before
      border: 0

.cam-fader
  position: relative
  width: 100%
  height: 4px
  appearance: none
  background: $color-black
  border-radius: 0
  cursor: pointer
  &::-webkit-slider-runnable-track
    -webkit-appearance: none
    border: 0
    border-radius: 0
    width: 100%
    background: none
  &::-moz-range-track
    -moz-appearance: none
    border: 0
    border-radius: 0
    width: 100%
    background: none
  &:focus
    outline: none
  &::-webkit-slider-thumb
    -webkit-appearance: none
    border: solid $color-black
    margin-top: 0
    border-width: 4px
    width: 15px
    height: 30px
  &::-moz-range-track
    opacity: 0
    width: 100%
    &:focus
      outline: none
  &::-moz-range-thumb
    border: solid $color-black
    background: transparent
    cursor: grab
    border-radius: 0
    border-width: 4px
    width: 7px
    height: 22px
    &:active
      cursor: grabbing
  &:-moz-focusring
    outline: none
  &::-moz-focus-outer
    border: 0

// ******************************************************

// PAGE INFO

.page-content
  display: none
  &.active
    display: initial
  p
    max-width: 900px

// ******************************************************

// MEDIA QUERIES

$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 18px
$font-size-large = 24px

grid(100%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 21px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 18px
  $font-size-large = 26px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid(100%, $gutter, m)

  font-sizes($font-size-basic, false, $font-size-large)

  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 18px
  $font-size-large = 30px

  grid(100%, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, false, $font-size-large)

  @import 'responsive/desktop'
