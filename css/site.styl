// styl property ordering: https://github.com/rossPatton/stylint/blob/master/src/data/ordering.json

@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)

// ******************************************************

// BASIC

html
  background-color: $color-white
  color: $color-black

img
  max-width: 100%
  height: auto

.gallery-image-holder
  margin-bottom: 1rem

$header-height = 79px

#header
  position: fixed
  z-index: 100
  width: 100%
  height: $header-height

button
  padding: 0
  border: 0
  background: transparent
  appearance: none

// ******************************************************

// HOME

body.home
  #page-close
    display: none

.cam-feed
  position: fixed
  top: 0
  left: 0
  z-index: -100
  width: 100%
  height: 100%
  background-image: url('http://estudioherrera.servehttp.com/')
  background-position: center
  background-size: cover
  opacity: .5
  pointer-events: none

.home-project-item
  opacity: .5

// ******************************************************

// PROJECT SINGLE

.project-nav-arrow
  margin: 0 .5rem
  vertical-align: middle

// ******************************************************

// CAMERA CONTROL

#cam-control
  position: fixed
  bottom: 0
  left: 10%
  z-index: 90
  width: 80%
  pointer-events: none

.cam-ui
  pointer-events: auto

.cam-fader
  width: 100%

// ******************************************************

// PAGE INFO

.page-content
  display: none
  &.active
    display: initial
  p
    max-width: 900px

// ******************************************************

// MEDIA QUERIES

$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 18px
$font-size-large = 24px

grid(100%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 21px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 18px
  $font-size-large = 26px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid(100%, $gutter, m)

  font-sizes($font-size-basic, false, $font-size-large)

  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 18px
  $font-size-large = 30px

  grid(100%, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, false, $font-size-large)

  @import 'responsive/desktop'