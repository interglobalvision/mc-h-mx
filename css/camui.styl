cam-ui($chevron-size, $border-width) 
  .cam-fader-holder
    &:after 
      top: -($chevron-size / 3) * 1.2
      left: -($chevron-size * 0.6)
      width: $chevron-size
      height: $chevron-size
      border-width: $border-width $border-width 0 0
    &:before 
      top: -($chevron-size / 3) * 1.2
      right: -($chevron-size * 0.6)
      width: $chevron-size
      height: $chevron-size
      border-width: 0 0 $border-width $border-width 

  .cam-fader
    height: $border-width
    &::-webkit-slider-thumb
      border-width: $border-width
      width: $chevron-size * .85
      height: $chevron-size * 1.95
    &::-moz-range-thumb
      border-width: $border-width
      width: $chevron-size * .4
      height: $chevron-size * 1.5
