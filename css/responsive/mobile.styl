// ******************************************************

// BASIC

$border-width = 4px
$chevron-size = 15px

#main-content
  padding-top: $header-height - $margin-small

#page-close
  svg
    width: $chevron-size * 1.5
    path
      stroke-width: $border-width * .7

body.home
  #posts
    padding-bottom: $margin-large

// ******************************************************

// STELLAR

.stellar-item
  transition: transform .5s

// ******************************************************

// SINGLE PROJECT

.project-title,
.project-content p,
.project-content .portrait,
.project-list
  margin-left: 0

.project-pagination
  svg
    width: $chevron-size
    path
      stroke-width: $border-width * .7
  &:first-of-type
    svg
      margin-right: $margin-tiny
  &:last-of-type
    svg
      margin-left: $margin-tiny

// ******************************************************